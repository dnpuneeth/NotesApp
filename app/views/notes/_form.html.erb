<%= form_for @note, html: {class: 'form-horizontal'} do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Name your note", required: true%>
      </div>
    </div>
     <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control", rows: "10", placeholder: "What would you like to note?", required: true%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tags, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :tags, class: "form-control", placeholder: "TagA TagB", required: true%>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
<% end %>